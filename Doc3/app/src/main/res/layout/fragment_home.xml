<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ongoing_txt" />

    <HorizontalScrollView
        android:layout_width="382dp"
        android:layout_height="618dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/med_hist_1"
                android:layout_width="430dp"
                android:layout_height="532dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/on_med1" />

            <ImageView
                android:id="@+id/med_hist_2"
                android:layout_width="430dp"
                android:layout_height="532dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/on_med2" />

            <ImageView
                android:id="@+id/med_hist_3"
                android:scaleType="fitCenter"
                android:layout_width="430dp"
                android:layout_height="532dp"
                android:background="@null"
                app:srcCompat="@drawable/on_med3" />

            <ImageButton
                android:id="@+id/add_priscrip"
                android:layout_width="430dp"
                android:layout_height="532dp"
                android:background="@null"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/add_priscrip" />


        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>